# ============================================================================
# Multi-stage Dockerfile for CloudToLocalLLM Web Application
# Stage 1: Build Flutter web application (using pre-built Flutter image)
# Stage 2: Serve with nginx (non-root)
# ============================================================================

# ---- Stage 1: Build Flutter Web App ----
FROM alpine:latest AS builder

# Install dependencies
RUN apk add --no-cache \
    bash \
    curl \
    git \
    unzip \
    xz \
    ca-certificates \
    python3 \
    make \
    g++

# Install Flutter as root (system-wide install)
ENV FLUTTER_HOME=/opt/flutter
ENV PATH="${FLUTTER_HOME}/bin:${PATH}"

RUN git clone https://github.com/flutter/flutter.git -b stable --depth 1 ${FLUTTER_HOME} && \
    chown -R 101:101 ${FLUTTER_HOME} && \
    chmod -R u+w ${FLUTTER_HOME}

# Switch to nginx user (UID 101 - same as nginx container)
USER 101

# Configure and build Flutter (runs as UID 101)
RUN flutter doctor && \
    flutter config --enable-web

WORKDIR /app

# Copy files with ownership
COPY --chown=101:101 pubspec.yaml pubspec.lock ./
COPY --chown=101:101 . .

# Build Flutter web app (runs as UID 101)
RUN flutter pub get && \
    flutter build web --release

# ---- Stage 2: Serve with Nginx (non-root) ----
FROM nginxinc/nginx-unprivileged:alpine

# Copy custom nginx configuration
COPY config/docker/nginx-web.conf /etc/nginx/conf.d/default.conf

# Copy built Flutter web app from builder stage
COPY --from=builder /app/build/web /usr/share/nginx/html
