# ============================================================================
# Multi-stage Dockerfile for CloudToLocalLLM Web Application
# Stage 1: Build Flutter web application (using pre-built Flutter image)
# Stage 2: Serve with nginx (non-root)
# ============================================================================

# ---- Stage 1: Build Flutter Web App ----
FROM ghcr.io/cirruslabs/flutter:stable AS builder

WORKDIR /app

# Copy files
COPY pubspec.yaml pubspec.lock ./
COPY . .

# Get existing user with UID 1000 (container already has one)
RUN EXISTING_USER=$(getent passwd 1000 | cut -d: -f1) && \
    EXISTING_GROUP=$(getent group 1000 | cut -d: -f1) && \
    echo "Using existing user: $EXISTING_USER (UID 1000)" && \
    chown -R $EXISTING_USER:$EXISTING_GROUP /app && \
    mkdir -p /app/build /app/.dart_tool && \
    chown -R $EXISTING_USER:$EXISTING_GROUP /app/build /app/.dart_tool

# Switch to existing non-root user (UID 1000)
USER 1000

# Ensure build directories exist and are writable
RUN mkdir -p /app/build /app/.dart_tool

# Build Flutter web app (runs as non-root user)
RUN flutter pub get && \
    flutter build web --release

# ---- Stage 2: Serve with Nginx (non-root) ----
FROM nginxinc/nginx-unprivileged:alpine

# Copy custom nginx configuration
COPY config/docker/nginx-web.conf /etc/nginx/conf.d/default.conf

# Copy built Flutter web app from builder stage
COPY --from=builder /app/build/web /usr/share/nginx/html
