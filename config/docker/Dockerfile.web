# ============================================================================
# Multi-stage Dockerfile for CloudToLocalLLM Web Application
# Stage 1: Build Flutter web application (using pre-built Flutter image)
# Stage 2: Serve with nginx (non-root)
# ============================================================================

# ---- Stage 1: Build Flutter Web App ----
FROM ghcr.io/cirruslabs/flutter:stable AS builder

# CRITICAL: Switch to non-root user BEFORE any Flutter commands
# Cirrus Flutter containers have a default user (usually UID 1000)
# Verify we're not root and switch if needed
RUN id && whoami
USER 1000:1000

WORKDIR /app

# Copy pubspec files first to leverage Docker cache for dependencies
COPY pubspec.yaml pubspec.lock ./

# Verify non-root before Flutter commands
RUN whoami && id && flutter pub get

# Copy the rest of the application source code
COPY . .

# Build Flutter web app (MUST run as non-root)
RUN whoami && id && flutter build web --release

# ---- Stage 2: Serve with Nginx (non-root) ----
FROM nginxinc/nginx-unprivileged:alpine

# Copy custom nginx configuration
COPY config/docker/nginx-web.conf /etc/nginx/conf.d/default.conf

# Copy built Flutter web app from builder stage
COPY --from=builder --chown=nginx:nginx /app/build/web /usr/share/nginx/html
