# ============================================================================
# Multi-stage Dockerfile for CloudToLocalLLM Web Application
# Stage 1: Build Flutter web application (using pre-built Flutter image)
# Stage 2: Serve with nginx (non-root)
# ============================================================================

# ---- Stage 1: Build Flutter Web App ----
FROM ghcr.io/cirruslabs/flutter:stable AS builder

# Create non-root user for build
RUN groupadd -r flutter -g 1000 && useradd -r -g flutter -u 1000 flutter

# Set proper permissions for Flutter SDK and directories
RUN chown -R flutter:flutter /opt/flutter && \
    mkdir -p /home/flutter/.pub-cache && \
    chown -R flutter:flutter /home/flutter && \
    mkdir -p /app && \
    chown -R flutter:flutter /app

# Set Flutter pub cache location for non-root user
ENV PUB_CACHE=/home/flutter/.pub-cache
ENV PATH=$PATH:/home/flutter/.pub-cache/bin

# Set working directory
WORKDIR /app

# Copy files as root first (for proper permissions)
COPY pubspec.yaml pubspec.lock ./

# Switch to non-root user for pub get
USER flutter
RUN flutter pub get

# Switch back to root to copy remaining files
USER root
COPY . .

# Change ownership of all copied files
RUN chown -R flutter:flutter /app

# Switch to non-root user for build
USER flutter

# Build Flutter web app for production
RUN flutter build web --release

# ---- Stage 2: Serve with Nginx (non-root) ----
FROM nginxinc/nginx-unprivileged:alpine

# Copy custom nginx configuration
COPY config/docker/nginx-web.conf /etc/nginx/conf.d/default.conf

# Copy built Flutter web app from builder stage
COPY --from=builder /app/build/web /usr/share/nginx/html

# Expose port 8080 (non-root nginx)
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/ || exit 1

# Container runs as non-root user (UID 101, nginx) by default
USER 101
