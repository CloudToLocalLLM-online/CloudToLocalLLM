# ============================================================================
# Multi-stage Dockerfile for CloudToLocalLLM Web Application
# Stage 1: Build Flutter web application (using pre-built Flutter image)
# Stage 2: Serve with nginx (non-root)
# ============================================================================

# ---- Stage 1: Build Flutter Web App ----
FROM alpine:latest AS builder

# Install dependencies (same pattern as API container)
RUN apk add --no-cache \
    bash \
    curl \
    git \
    unzip \
    xz \
    ca-certificates \
    python3 \
    make \
    g++

# Create non-root user first
RUN addgroup -g 1000 appuser && \
    adduser -u 1000 -G appuser -D appuser

# Switch to non-root user
USER appuser

# Install Flutter in user's home directory (non-root installation)
ENV FLUTTER_HOME=/home/appuser/flutter
ENV PATH="${FLUTTER_HOME}/bin:${PATH}"

# All commands now run as appuser (non-root)
RUN mkdir -p ${FLUTTER_HOME} && \
    git clone https://github.com/flutter/flutter.git -b stable --depth 1 ${FLUTTER_HOME} && \
    flutter doctor && \
    flutter config --enable-web

WORKDIR /app

# Copy files with ownership (COPY runs as root, but we set ownership)
COPY --chown=appuser:appuser pubspec.yaml pubspec.lock ./
COPY --chown=appuser:appuser . .

# Build Flutter web app (runs as appuser - non-root)
RUN flutter pub get && \
    flutter build web --release

# ---- Stage 2: Serve with Nginx (non-root) ----
FROM nginxinc/nginx-unprivileged:alpine

# Copy custom nginx configuration
COPY config/docker/nginx-web.conf /etc/nginx/conf.d/default.conf

# Copy built Flutter web app from builder stage
COPY --from=builder /app/build/web /usr/share/nginx/html
