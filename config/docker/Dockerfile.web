# ============================================================================
# Multi-stage Dockerfile for CloudToLocalLLM Web Application
# Stage 1: Build Flutter web application (using pre-built Flutter image)
# Stage 2: Serve with nginx (non-root)
# ============================================================================

# ---- Stage 1: Build Flutter Web App ----
FROM alpine:latest AS builder

# Install dependencies
RUN apk add --no-cache \
    bash \
    curl \
    git \
    unzip \
    xz \
    ca-certificates \
    python3 \
    make \
    g++

# Create nginx user and group (UID 101 - same as nginx container)
RUN addgroup -g 101 nginx && \
    adduser -u 101 -G nginx -D -H nginx

# Install Flutter as root (system-wide install)
ENV FLUTTER_HOME=/opt/flutter
ENV PATH="${FLUTTER_HOME}/bin:${PATH}"

RUN mkdir -p ${FLUTTER_HOME} && \
    git clone https://github.com/flutter/flutter.git -b stable ${FLUTTER_HOME}

# Switch to nginx user before running Flutter commands
USER nginx

# Create pub cache directory for nginx user
RUN mkdir -p ${HOME}/.pub-cache

# Run Flutter commands as nginx user (best practice)
RUN flutter doctor

# Set pub cache environment variable
ENV PUB_CACHE=/home/.pub-cache

# Configure Flutter (runs as nginx user)
RUN echo "Current user: $(whoami)" && \
    echo "Current UID: $(id -u)" && \
    echo "Current GID: $(id -g)" && \
    flutter config --enable-web

WORKDIR /app

# Copy files with ownership
COPY --chown=101:101 pubspec.yaml pubspec.lock ./
COPY --chown=101:101 . .

# Build Flutter web app (runs as nginx user)
RUN echo "Building as user: $(whoami) (UID: $(id -u))" && \
    flutter pub get && \
    flutter build web --release

# ---- Stage 2: Serve with Nginx (non-root) ----
FROM nginxinc/nginx-unprivileged:alpine

# Copy custom nginx configuration
COPY config/docker/nginx-web.conf /etc/nginx/conf.d/default.conf

# Copy built Flutter web app from builder stage
COPY --from=builder /app/build/web /usr/share/nginx/html
