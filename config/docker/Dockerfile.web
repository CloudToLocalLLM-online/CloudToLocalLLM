# ============================================================================
# Multi-stage Dockerfile for CloudToLocalLLM Web Application
# Stage 1: Build Flutter web application (using pre-built Flutter image)
# Stage 2: Serve with nginx (non-root)
# ============================================================================

# ---- Stage 1: Build Flutter Web App ----
FROM alpine:latest AS builder

# Install dependencies
RUN apk add --no-cache \
    bash \
    curl \
    git \
    unzip \
    xz \
    ca-certificates \
    python3 \
    make \
    g++

# Use existing nginx user (UID 101)
# Get the username for UID 101, or use 'nginx' as fallback
RUN NGINX_USER=$(getent passwd 101 | cut -d: -f1 || echo "nginx") && \
    NGINX_HOME=$(getent passwd 101 | cut -d: -f6 || echo "/home/nginx")

# Install Flutter in nginx user's home directory
USER 101
WORKDIR ${NGINX_HOME}
ENV FLUTTER_HOME=${NGINX_HOME}/flutter
ENV PATH="${FLUTTER_HOME}/bin:${PATH}"

RUN git clone https://github.com/flutter/flutter.git -b stable ${FLUTTER_HOME} && \
    flutter doctor && \
    flutter config --enable-web

WORKDIR /app

# Copy files and build
COPY --chown=101:101 pubspec.yaml pubspec.lock ./
COPY --chown=101:101 . .

# Build Flutter web app
RUN flutter pub get && \
    flutter build web --release

# ---- Stage 2: Serve with Nginx (non-root) ----
FROM nginxinc/nginx-unprivileged:alpine

# Copy custom nginx configuration
COPY config/docker/nginx-web.conf /etc/nginx/conf.d/default.conf

# Copy built Flutter web app from builder stage
COPY --from=builder /app/build/web /usr/share/nginx/html
