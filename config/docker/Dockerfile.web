# ============================================================================
# Multi-stage Dockerfile for CloudToLocalLLM Web Application
# Stage 1: Build Flutter web application (using pre-built Flutter image)
# Stage 2: Serve with nginx (non-root)
# ============================================================================

# ---- Stage 1: Build Flutter Web App ----
FROM alpine:latest AS builder

# Install dependencies (same pattern as API container)
RUN apk add --no-cache \
    bash \
    curl \
    git \
    unzip \
    xz \
    ca-certificates \
    python3 \
    make \
    g++

# Create non-root user (same pattern as API container - UID 1001)
RUN addgroup -g 1001 -S flutter && \
    adduser -S flutter -u 1001 -G flutter && \
    echo "Created user: flutter (UID 1001)" && \
    id flutter && \
    getent passwd 1001

# Install Flutter as root (before switching users)
ENV FLUTTER_HOME=/opt/flutter
ENV PATH="${FLUTTER_HOME}/bin:${PATH}"

RUN git clone https://github.com/flutter/flutter.git -b stable --depth 1 ${FLUTTER_HOME} && \
    flutter doctor && \
    flutter config --enable-web && \
    chown -R flutter:flutter ${FLUTTER_HOME}

# Set up pub cache for flutter user
RUN mkdir -p /home/flutter/.pub-cache && \
    chown -R flutter:flutter /home/flutter/.pub-cache

WORKDIR /app

# Copy files with ownership (same pattern as API container - chown during copy)
COPY --chown=flutter:flutter pubspec.yaml pubspec.lock ./
COPY --chown=flutter:flutter . .

# Verify user exists and switch to non-root user
RUN echo "Before USER switch:" && \
    id && \
    whoami

USER flutter

# Verify we're running as non-root and build Flutter web app
RUN echo "After USER switch:" && \
    id && \
    whoami && \
    echo "Current UID: $(id -u)" && \
    echo "Current user: $(whoami)" && \
    flutter pub get && \
    flutter build web --release

# ---- Stage 2: Serve with Nginx (non-root) ----
FROM nginxinc/nginx-unprivileged:alpine

# Copy custom nginx configuration
COPY config/docker/nginx-web.conf /etc/nginx/conf.d/default.conf

# Copy built Flutter web app from builder stage
COPY --from=builder /app/build/web /usr/share/nginx/html
