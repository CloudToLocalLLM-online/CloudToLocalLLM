{
  "mcpServers": {
    "digitalocean": {
      "command": "node",
      "args": ["config/mcp/servers/digitalocean-server.js"],
      "env": {
        "DIGITALOCEAN_TOKEN": "${DIGITALOCEAN_TOKEN}",
        "DO_CLUSTER_NAME": "cloudtolocalllm",
        "DO_REGION": "tor1",
        "DO_REGISTRY": "registry.digitalocean.com/cloudtolocalllm"
      },
      "description": "DigitalOcean automation and management",
      "capabilities": [
        "kubernetes_operations",
        "container_registry",
        "cluster_management",
        "load_balancer_config",
        "dns_management"
      ]
    },
    "kubernetes": {
      "command": "node",
      "args": ["config/mcp/servers/kubernetes-server.js"],
      "env": {
        "KUBECONFIG": "${HOME}/.kube/config",
        "KUBERNETES_NAMESPACE": "cloudtolocalllm"
      },
      "description": "Kubernetes cluster management and operations",
      "capabilities": [
        "deploy_applications",
        "manage_pods",
        "view_logs",
        "scale_deployments",
        "rollback_deployments"
      ]
    },
    "github": {
      "command": "node",
      "args": ["config/mcp/servers/github-server.js"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_REPO": "imrightguy/CloudToLocalLLM"
      },
      "description": "GitHub repository and CI/CD management",
      "capabilities": [
        "manage_workflows",
        "create_secrets",
        "trigger_deployments",
        "manage_releases"
      ]
    },
    "docker": {
      "command": "node",
      "args": ["config/mcp/servers/docker-server.js"],
      "env": {
        "DOCKER_REGISTRY": "registry.digitalocean.com/cloudtolocalllm"
      },
      "description": "Docker image building and registry operations",
      "capabilities": [
        "build_images",
        "push_to_registry",
        "scan_vulnerabilities",
        "tag_management"
      ]
    }
  }
}

