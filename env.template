# ============================================================================
# CloudToLocalLLM Production Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# Domain Configuration
# ============================================================================
# Your main domain (without https://)
DOMAIN=yourdomain.com

# Email for Let's Encrypt SSL certificates
SSL_EMAIL=admin@yourdomain.com

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_DB=cloudtolocalllm
POSTGRES_USER=appuser
# IMPORTANT: Change this to a strong password!
POSTGRES_PASSWORD=changeme_generate_strong_password

# ============================================================================
# JWT Configuration
# ============================================================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=changeme_generate_strong_jwt_secret

# ============================================================================
# Application Configuration
# ============================================================================
LOG_LEVEL=info
NODE_ENV=production

# ============================================================================
# Optional: Error Tracking
# ============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# ============================================================================
# Optional: Google Cloud Identity Platform (GCIP)
# ============================================================================
# If using GCIP instead of Auth0
GCIP_API_KEY=

