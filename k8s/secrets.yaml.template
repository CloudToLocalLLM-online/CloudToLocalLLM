# Kubernetes Secrets Template
# IMPORTANT: Do NOT commit this file with real values!
# Copy to secrets.yaml and fill in your actual values

apiVersion: v1
kind: Secret
metadata:
  name: cloudtolocalllm-secrets
  namespace: cloudtolocalllm
type: Opaque
stringData:
  # Database credentials
  postgres-password: "CHANGE_ME_STRONG_PASSWORD"
  
  # JWT secret (generate with: openssl rand -base64 32)
  jwt-secret: "CHANGE_ME_JWT_SECRET"
  
  # Auth0 credentials
  auth0-domain: "your-tenant.us.auth0.com"
  auth0-audience: "https://app.yourdomain.com"
  auth0-client-id: "CHANGE_ME_CLIENT_ID"
   auth0-issuer-url: "https://your-tenant.us.auth0.com"
   auth0-client-secret: "CHANGE_ME_CLIENT_SECRET"

  # Cloudflare API (for DNS and Cache Purging)
  cloudflare-api-token: "CHANGE_ME_CLOUDFLARE_TOKEN"

  # Grafana Cloud (for remote monitoring)
  grafana-cloud-prometheus-url: "https://prometheus-prod-XX.grafana.net/api/prom/push"
  grafana-cloud-prometheus-user: "CHANGE_ME_USER_ID"
  grafana-cloud-prometheus-token: "CHANGE_ME_TOKEN"
  
  # Stripe API Keys (Admin Center Payment Gateway)
  # Test mode keys (for staging/development)
  stripe-test-secret-key: "sk_test_CHANGE_ME"
  stripe-test-publishable-key: "pk_test_CHANGE_ME"
  stripe-test-webhook-secret: "whsec_CHANGE_ME"
  
  # Production mode keys (for production)
  stripe-live-secret-key: "sk_live_CHANGE_ME"
  stripe-live-publishable-key: "pk_live_CHANGE_ME"
  stripe-live-webhook-secret: "whsec_CHANGE_ME"
  
  # Optional: Sentry DSN
  sentry-dsn: ""
