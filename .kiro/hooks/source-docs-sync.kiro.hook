{
  "enabled": true,
  "name": "Source Code to Documentation Sync",
  "description": "Monitors all source code files across the repository (Dart, JavaScript, TypeScript, Python, YAML configs) and automatically updates README.md and /docs folder when changes are detected. Ensures documentation stays in sync with code changes.",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "lib/**/*.dart",
      "services/**/*.js",
      "services/**/*.ts",
      "scripts/**/*.js",
      "scripts/**/*.ps1",
      "scripts/**/*.sh",
      "scripts/**/*.py",
      "test/**/*.dart",
      "web/**/*.js",
      "web/**/*.ts",
      "*.yaml",
      "*.yml",
      "pubspec.yaml",
      "package.json",
      "analysis_options.yaml",
      "build.yaml"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Review the changes made to the source code files and update the relevant documentation. Check if README.md needs updates for new features or changes. Review the /docs folder structure and update appropriate documentation files (ARCHITECTURE, DEVELOPMENT, DEPLOYMENT, etc.) to reflect the code changes. Ensure all new functions, services, or features are documented. Update CHANGELOG.md if significant changes were made."
  }
}