{
  "enabled": true,
  "name": "Flutter Linter Auto-Fix",
  "description": "Automatically runs flutter analyze to detect linting issues and applies fixes using available dart formatting and linting tools",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": ["lib/**/*.dart", "test/**/*.dart", "pubspec.yaml", "analysis_options.yaml"],
    "debounceMs": 1000
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run `flutter analyze` to check for linting issues in the Flutter project. Then run `dart fix --apply` to automatically fix any fixable issues. Report any remaining issues that require manual intervention. Format the code with `dart format .` to ensure consistent code style."
  }
}