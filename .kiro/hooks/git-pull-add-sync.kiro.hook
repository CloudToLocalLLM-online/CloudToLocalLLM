{
  "enabled": true,
  "name": "Git Pull, Add & Sync",
  "description": "Automatically pulls latest changes, stages all modified files (excluding temp files), and updates gitignore to exclude temporary files when file changes are detected.",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "*",
      "**/*",
      "lib/**/*",
      "services/**/*",
      "web/**/*",
      "scripts/**/*",
      "config/**/*",
      "k8s/**/*",
      "docs/**/*",
      ".github/**/*",
      "android/**/*",
      "ios/**/*",
      "windows/**/*",
      "linux/**/*"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run: git pull && git add -A && git status"
  }
}