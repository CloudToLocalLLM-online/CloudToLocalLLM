# ============================================================================
# Runtime Dockerfile for CloudToLocalLLM Streaming Proxy
# Uses artifacts from the Universal Builder
# ============================================================================

# Use Debian Slim to match the Builder
FROM node:20-slim

WORKDIR /app

# Copy artifacts from Universal Builder
COPY --from=cloudtolocalllm/builder:latest --chown=node:node /artifacts/streaming-proxy ./

USER node

EXPOSE 3001
CMD [ "npm", "start" ]
