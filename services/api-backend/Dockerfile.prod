# ---- Base Node ----
FROM node:24-alpine AS base
WORKDIR /api

# Build tools for native modules (sqlite3)
RUN apk add --no-cache python3 make g++

# Copy package files
COPY services/api-backend/package*.json ./

# Install dependencies (run as root for system packages, then change ownership)
RUN npm ci && \
    chown -R 1001:1001 /api

# ---- Production ----
FROM node:24-alpine AS production

# Copy Chisel binary from official Docker image
COPY --from=jpillora/chisel:latest /app/chisel /usr/local/bin/chisel
RUN chmod +x /usr/local/bin/chisel

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

WORKDIR /api

# Create isolated data directories for this container (logs, database, etc.)
RUN mkdir -p /api/data /api/logs && \
    chown -R 1001:1001 /api

# Copy files and change ownership (only API backend files, nothing else)
COPY --from=base --chown=nodejs:nodejs /api/node_modules ./node_modules
COPY --chown=nodejs:nodejs services/api-backend/ ./

# Ensure data directories have correct ownership
RUN chown -R nodejs:nodejs /api/data /api/logs

# Switch to non-root user
USER nodejs

# Set environment variables to use container-specific paths
ENV LOG_DIR=/api/logs
ENV DB_PATH=/api/data/cloudtolocalllm.db
ENV CHISEL_BINARY=/usr/local/bin/chisel
ENV CHISEL_PORT=8080

EXPOSE 3000
EXPOSE 8080
CMD [ "npm", "start" ]
