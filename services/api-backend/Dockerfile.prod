# ---- Base Node ----
FROM node:18-alpine AS base
WORKDIR /app
COPY services/api-backend/package*.json ./
RUN npm ci

# ---- Production ----
FROM node:18-alpine AS production
WORKDIR /app
COPY --from=base /app/node_modules ./node_modules
COPY services/api-backend/ ./
EXPOSE 3000
CMD [ "npm", "start" ]
