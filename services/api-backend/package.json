{
  "name": "cloudtolocalllm-api-backend",
  "version": "1.0.0",
  "description": "CloudToLocalLLM API Backend for Bridge Communication",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/unit/",
    "test:integration": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/integration/",
    "test:security": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/security/",
    "test:tunnel": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/tunnel/",
    "test:tunnel:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/tunnel/unit/",
    "test:tunnel:integration": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/tunnel/integration/",
    "test:tunnel:security": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/tunnel/security/",
    "test:user-isolation": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/security/user-isolation.test.js",
    "test:auth": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/security/authentication-authorization.test.js",
    "test:security:verbose": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js ../test/api-backend/security/ --verbose",
    "db:migrate": "node database/migrate.js init",
    "db:validate": "node database/migrate.js validate",
    "db:stats": "node database/migrate.js stats",
    "db:test": "node scripts/test-database.js",
    "db:setup-cloud-sql": "bash scripts/setup-cloud-sql.sh",
    "deploy:cloud-run": "bash scripts/deploy-cloud-run.sh",
    "test:auth-flow": "node scripts/test-auth-flow.js",
    "deploy:after-auth": "bash scripts/deploy-after-auth.sh",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "express-rate-limit": "^7.1.5",
    "googleapis": "^118.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^2.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.16.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "stripe": "^19.3.1",
    "uuid": "^9.0.1",
    "validator": "^13.15.23",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@eslint/js": "^9.15.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "cloudtolocalllm",
    "api",
    "bridge",
    "websocket",
    "ollama"
  ],
  "author": "CloudToLocalLLM Team",
  "license": "MIT"
}
